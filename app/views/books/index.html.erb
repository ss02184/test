<div class="row">

  <% @books.each do |book| %>

      <div class="col-md-3">
        <div class="container">
          <div class="container1">
            <div class="polaroid" style="width: 100px; height: auto">
              <a class="book-links" href="/books/<%=book.id %>">
                <img src="<%= url_for(book.img) if book.img.attached? %>" alt="<%= url_for(book.title) %>" style="width: 100px; height: 175px;">
              <div class="overlay">
                <div class="text">
                  <p>
                    <strong>Category:</strong>
                    <%= book.category.name if book.category %>
                  </p>
                  <p>
                    <strong>Title:</strong>
                    <%= book.title %>
                  </p>
                  <p>
                    <strong>Author:</strong>
                    <%= book.author %>
                  </p>
                </div>
              </div>
              </a>
            </div>
          </div>
        </div>
      </div>

  <% end %>
</div>
