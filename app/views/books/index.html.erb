<p id="notice"><%= notice %></p>

<style>
  table {
    border-collapse: collapse;
    width: 100%;
  }

  th, td {
    vertical-align: bottom;
    padding: 15px;
    text-align: center;
    border-bottom: 1px solid #ddd;
  }

  tr:hover {background-color:#f5f5f5;}
</style>
<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Author</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.description %></td>
      <td><%= book.author %></td>
      <td><%= book.img  %></td>
      <td><%= link_to 'Show', book_path(book) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br>

<% if user_signed_in? %>
  <%= link_to 'New Book', new_book_path %>
<% end %>