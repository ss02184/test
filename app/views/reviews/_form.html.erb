<%= simple_form_for([@book, @book.reviews.build]) do |form|%>
  <div id="rating-form">
    <div class="field">
      <%= form.label :rating %>
    </div>
  </div>

  <div class="field">
    <%= form.label "Comment" %>
    <%= form.text_area :comment %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_area :name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end%>

<script>
  $('#rating-form').raty({
      path: '/assets/',
      scoreName: 'review[rating]'
  });
</script>